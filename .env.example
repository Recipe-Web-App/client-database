# ==============================================================================
# Client Database Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in the values
# IMPORTANT: Never commit .env file to version control
#
# Generate strong passwords with: openssl rand -base64 32

# ------------------------------------------------------------------------------
# MySQL Connection Settings
# ------------------------------------------------------------------------------
MYSQL_HOST=client-database
MYSQL_PORT=3306
MYSQL_DATABASE=client_db

# NodePort for external access (valid range: 30000-32767)
# Used by service-nodeport-template.yaml for connections from outside the cluster
MYSQL_NODEPORT=30306

# ------------------------------------------------------------------------------
# MySQL Root User
# ------------------------------------------------------------------------------
# Root user has full administrative privileges
# Use ONLY for initial setup and emergency operations
MYSQL_ROOT_PASSWORD=<generate-strong-password-here>

# ------------------------------------------------------------------------------
# Database Maintenance User
# ------------------------------------------------------------------------------
# Used for schema changes, migrations, and maintenance tasks
# Has ALL PRIVILEGES on client_db except DROP DATABASE
DB_MAINT_USERNAME=db-maint-user
DB_MAINT_PASSWORD=<generate-strong-password-here>

# ------------------------------------------------------------------------------
# Auth Service Application User
# ------------------------------------------------------------------------------
# Used by auth-service for runtime database queries
# Has SELECT, INSERT, UPDATE, DELETE permissions only
AUTH_SERVICE_USERNAME=auth-service-user
AUTH_SERVICE_PASSWORD=<generate-strong-password-here>

# ------------------------------------------------------------------------------
# Backup Configuration
# ------------------------------------------------------------------------------
# Number of days to retain backups before cleanup
BACKUP_RETENTION_DAYS=30
